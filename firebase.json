{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/200.html"
      }
    ],
      "headers": [ {
        "source" : "**",
          "headers" : [ {
              "key" : "Cache-Control",
              "value" : "max-age=31536000"
          }]
    }, {
    "source" : "service-worker.js",
          "headers" : [ {
              "key" : "Cache-Control",
              "value" : "max-age=0"
          }]
    }, {
    "source" : "manifest.json",
          "headers" : [ {
              "key" : "Cache-Control",
              "value" : "max-age=0"
          }]
    }
    ]
  }
}
